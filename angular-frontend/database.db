  CONSTRAINT fk_news_author FOREIGN KEY (author_id) REFERENCES users(id)
    ON DELETE CASCADE ON UPDATE CASCADE,
  KEY idx_news_active (active, published_at)
) ENGINE=InnoDB DEFAULT CHARSET=utf8mb4;



